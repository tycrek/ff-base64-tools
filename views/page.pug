mixin input(type)
	- const lc = type.toLowerCase();
	.flex.flex-col.w-full
		h2.text-lg.indent-2= type
		input.input(type='text' name=lc id=lc)

doctype html
html(lang='en')
head
	meta(charset='utf-8')
	link(rel='stylesheet' href='css/tailwind.css')
body.w-96.p-8.flex.flex-col.items-center.gap-4.bg-slate-900.text-slate-300
	h1.text-xl.text-slate-200 Base64 Tools
	+input('Encode')
	+input('Decode')
	script(src='script.js')